<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemMovieCast"
    android:layout_width="96sp"
    android:layout_height="128sp"
    android:orientation="vertical"
    android:padding="2dp">
    <!--
    code for CircularView referenced from
    @link: https://github.com/hdodenhof/CircleImageView
    -->
    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/castImageView"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:background="#c1c1c1"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/castName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Name"
        android:maxLines="1"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/castCharacter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="In the Role of"
        android:maxLines="1"
        android:textSize="12sp"
        android:textStyle="italic" />

</LinearLayout>