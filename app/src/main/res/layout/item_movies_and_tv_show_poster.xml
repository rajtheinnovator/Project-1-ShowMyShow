<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_movies_poster"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/grid_item_movie_and_tv_show_poster_image"
            style="@style/CardViewImageStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|end"
            android:gravity="right|end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="end|right|center_vertical"
                android:src="@drawable/iconvoteaverage" />

            <TextView
                android:id="@+id/voteAverageMovieAndTvShowPoster"
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:gravity="end"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/grid_item_movie_and_tv_show_poster_title"
            style="@style/CardViewTextStyle"
            android:ellipsize="end"
            android:hint="@string/hint_movie_title" />
    </LinearLayout>
</android.support.v7.widget.CardView>